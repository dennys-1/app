@model TiendaPc.Models.PedidoDetalleVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle del pedido";
}

<style>
.card-soft{border-radius:16px;border:1px solid #eef1f5;box-shadow:0 6px 18px rgba(16,24,40,.06);}
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Pedido @Model.NumeroPedido</h3>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="MisPedidos">Volver</a>
            <a class="btn btn-dark" asp-controller="Catalogo" asp-action="Index">Seguir comprando</a>
            <a class="btn btn-outline-dark" href='@Url.Action("Descargar","Pedidos", new { id = Model.IdPedido })'>Descargar PDF</a>
            <form method="post" asp-action="RepetirCompra" asp-route-id="@Model.IdPedido" class="d-inline">
    @Html.AntiForgeryToken()
    
</form>

        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col-md-3"><div class="p-3 card-soft"><div class="text-muted small">Estado</div><div class="fw-bold">@Model.Estado</div></div></div>
        <div class="col-md-3"><div class="p-3 card-soft"><div class="text-muted small">Subtotal</div><div class="fw-bold">S/ @Model.Subtotal.ToString("N2")</div></div></div>
        <div class="col-md-3"><div class="p-3 card-soft"><div class="text-muted small">IGV</div><div class="fw-bold">S/ @Model.Impuesto.ToString("N2")</div></div></div>
        <div class="col-md-3"><div class="p-3 card-soft"><div class="text-muted small">Total</div><div class="fw-bold">S/ @Model.Total.ToString("N2")</div></div></div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>SKU</th>
                    <th class="text-end">Cantidad</th>
                    <th class="text-end">P. Unitario</th>
                    <th class="text-end">Total l√≠nea</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.Producto</td>
                    <td>@it.Sku</td>
                    <td class="text-end">@it.Cantidad</td>
                    <td class="text-end">S/ @it.PrecioUnitario.ToString("N2")</td>
                    <td class="text-end">S/ @it.TotalLinea.ToString("N2")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>