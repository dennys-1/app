@model TiendaPc.Models.Producto
@{
    ViewData["Title"] = "Editar producto";
}
<h4 class="mb-3">Editar producto</h4>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card card-body shadow-sm">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="IdProducto" />

  <partial name="_Form" />

  <div class="row g-3 mt-1">
    <div class="col-md-6">
      <label class="form-label">Agregar imagen (opcional)</label>
      <input type="file" name="imagen" class="form-control" accept="image/*" />
      <div class="form-text">Si no hay principal, esta se marcar√° como principal.</div>
    </div>
  </div>

  <div class="mt-3 d-flex gap-2">
    <button class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
  </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
