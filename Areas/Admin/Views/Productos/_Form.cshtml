@model TiendaPc.Models.Producto
@{
    var marcas = (IEnumerable<TiendaPc.Models.Marca>)ViewBag.Marcas;
    var categorias = (IEnumerable<TiendaPc.Models.Categoria>)ViewBag.Categorias;
}
<div class="row g-3">
  <div class="col-md-3">
    <label class="form-label">SKU</label>
    <input asp-for="Sku" class="form-control" />
    <span asp-validation-for="Sku" class="text-danger"></span>
  </div>
  <div class="col-md-9">
    <label class="form-label">Nombre</label>
    <input asp-for="Nombre" class="form-control" />
    <span asp-validation-for="Nombre" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label class="form-label">Marca</label>
    <select asp-for="IdMarca" class="form-select"
            asp-items="@(new SelectList(marcas, "IdMarca", "Nombre", Model.IdMarca))">
      <option value="">-- Seleccione --</option>
    </select>
    <span asp-validation-for="IdMarca" class="text-danger"></span>
  </div>
  <div class="col-md-6">
    <label class="form-label">Categoría</label>
    <select asp-for="IdCategoria" class="form-select"
            asp-items="@(new SelectList(categorias, "IdCategoria", "Nombre", Model.IdCategoria))">
      <option value="">-- Seleccione --</option>
    </select>
    <span asp-validation-for="IdCategoria" class="text-danger"></span>
  </div>
  <div class="col-md-4">
    <label class="form-label">Precio</label>
    <input asp-for="Precio" class="form-control" />
    <span asp-validation-for="Precio" class="text-danger"></span>
  </div>
  <div class="col-md-4">
    <label class="form-label">Costo</label>
    <input asp-for="Costo" class="form-control" />
    <span asp-validation-for="Costo" class="text-danger"></span>
  </div>
  <div class="col-md-4 d-flex align-items-end">
    <div class="form-check">
      <input asp-for="Activo" class="form-check-input" />
      <label asp-for="Activo" class="form-check-label">Activo</label>
    </div>
  </div>
  <div class="col-12">
    <label class="form-label">Descripción</label>
    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
  </div>
</div>
