@model TiendaPc.Models.Pedido
@{
    Layout = "_Layout";
    ViewData["Title"] = "Gracias por tu compra";
    string numero = Model.NumeroPedido?.StartsWith("P") == true
        ? Model.NumeroPedido!
        : $"P{Model.IdPedido:D6}";
}

<!-- Fallback de estilos por si alguna hoja pisa utilidades de Bootstrap -->
<style>
  .exito-cards .card { border-radius: 16px; box-shadow: 0 6px 16px rgba(0,0,0,.06); border: 1px solid #eef0f2; }
  .exito-cards .card .label { color:#6b7280; font-size: .88rem; margin-bottom: .25rem; }
  .exito-check { width:64px;height:64px; border:2px solid #2ecc71; border-radius:12px; display:flex;align-items:center;justify-content:center; background:#E8F6EE; margin:0 auto 12px; }
  .exito-btns a { min-width: 190px; }
</style>

<div class="container py-5">

  <!-- Header con check -->
  <div class="text-center mb-4">
    <div class="exito-check"><span class="fs-1" style="color:#2ecc71;">✓</span></div>
    <h2 class="fw-semibold mb-1">¡Gracias por tu compra!</h2>
    <p class="mb-0">Tu pedido <strong>@numero</strong> fue creado correctamente.</p>
  </div>

  <!-- Tres tarjetas -->
  <div class="row g-3 justify-content-center exito-cards mb-4">
    <div class="col-12 col-md-3">
      <div class="card p-3 h-100">
        <div class="label">N° de pedido</div>
        <div class="fw-bold">@numero</div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card p-3 h-100">
        <div class="label">Estado</div>
        <div class="fw-bold">@Model.Estado</div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="card p-3 h-100">
        <div class="label">Total</div>
        <div class="fw-bold">S/ @Model.Total.ToString("N2")</div>
      </div>
    </div>
  </div>

<div class="d-flex gap-2 justify-content-center">
    <!-- Ver mis pedidos -->
    <a class="btn btn-outline-dark"
       href="@Url.Action("MisPedidos", "Pedidos")">
        Ver mis pedidos
    </a>

    <!-- Seguir comprando (catálogo) -->
    <a class="btn btn-dark"
       href="@Url.Action("Index", "Catalogo")">
        Seguir comprando
    </a>
</div>


  <p class="text-center text-muted mt-4 mb-0">
    Recibirás un correo con el detalle de tu compra (si habilitas notificaciones).
  </p>
</div>
