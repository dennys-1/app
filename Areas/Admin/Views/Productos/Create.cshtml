@model TiendaPc.Models.Producto

@{
    ViewData["Title"] = "Nuevo producto";
}
<h4 class="mb-3">Nuevo producto</h4>

<!-- Mostrar errores del modelo si los hubiera -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="card card-body shadow-sm">
  @Html.AntiForgeryToken()
  <partial name="_Form" />

  <div class="row g-3 mt-1">
    <div class="col-md-6">
      <label class="form-label">Imagen principal (opcional)</label>
      <input type="file" name="imagen" class="form-control" accept="image/*" />
      <div class="form-text">Se guardar√° en <code>/wwwroot/img/products</code>.</div>
    </div>
  </div>

  <div class="mt-3 d-flex gap-2">
    <button class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
  </div>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
